---
mbus: <%= config.nats_uri %>
pid: <%= config.working_dir %>/run/healthmanager.pid
log_level: DEBUG
intervals:
  database_scan:        60
  droplet_lost:         30
  droplets_analysis:    10
  flapping_death:        3
  flapping_timeout:    180
  restart_timeout:      20
  stable_state:         60
rails_environment: production
database_environment:
  production:
    database: appcloud_acdev
    host: localhost
    port: 5432
    encoding: utf8
    username: postgres
    password: postgres
    adapter: postgresql
    timeout: 2000
    template: template0 # Required for utf8 encoding
