---
mbus: <%= config.nats_uri %>
pid: <%= config.working_dir %>/run/healthmanager.pid
log_level: DEBUG
intervals:
  database_scan:        60
  droplet_lost:         30
  droplets_analysis:    10
  flapping_death:        3
  flapping_timeout:    180
  restart_timeout:      20
  stable_state:         60
rails_environment: production
database_environment:
  production:
    adapter: sqlite3
    database: <%= config.working_dir %>/local/ci.sqlite3
    encoding: utf8
